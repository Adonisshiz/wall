.default-table
    
    border-collapse: separate
    color:#666
    text-shadow: 1px 1px 0px #fff
    background:#eaebec
    margin:20px
    border:#ccc 1px solid

    border-radius: 3px

    //box-shadow: 0 1px 2px #d1d1d1


    a:link 
        color: #666
        font-weight: bold
        text-decoration:none

    a:visited 
        color: #999999
        font-weight:bold
        text-decoration:none

    a:active,
    a:hover 
        color: #bd5a35
        text-decoration:underline

     
