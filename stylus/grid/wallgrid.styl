width-mobile = 440px



generate-grid(column,wide)

  .row
    width wide

  [class*={column}-]
    float left

  for n,x in (1..12)
    x= x + 1
    .{column}-{(x)} , .col-{(x)}
      width ( 100 * (x / 12 ) )%

