// Tablet Layout - 320px - 480px
@media media-mobile
  generate-grid('mobile',width-mobile)

// Tablet Layout - 768px - 1024px
@media media-tablet
  generate-grid('tablet',width-tablet)

// Default look
// Desktop Layout - 1024px - 1440px
@media media-desktop
  generate-grid('desktop',width-desktop)

// Large Layout - 1440px - 1824px
@media media-large
  generate-grid( 'large',width-large)

